<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".TitleFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/title_constraint"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="167dp"
                    android:layout_height="162dp"
                    android:layout_marginTop="56dp"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/program_logo_describe"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.498"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@mipmap/ic_launcher_round"
                    tools:src="@tools:sample/avatars[2]"
                    tools:srcCompat="@tools:sample/avatars[2]"
                    tools:visibility="visible" />

            <TextView
                    android:id="@+id/AppName"
                    android:layout_width="275dp"
                    android:layout_height="62dp"
                    android:layout_marginTop="30dp"
                    android:text="@string/bluetooth_app_name"
                    android:textAlignment="center"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView" />

            <Button
                    android:id="@+id/bluetoothClassicBT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:text="@string/bluetooth_classic"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.506"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/AppName" />

            <Button
                    android:id="@+id/bluetoothLEBT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/ble_title"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/bluetoothClassicBT" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</layout>
